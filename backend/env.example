# Настройки базы данных
# Для локальной разработки:
DATABASE_URL=host=localhost user=postgres password=postgres dbname=dnd_cards port=5433 sslmode=disable
# Для Yandex Cloud Managed PostgreSQL:
# DATABASE_URL=host=your-cluster-id.mdb.yandexcloud.net user=your-user password=your-password dbname=dnd_cards port=6432 sslmode=require

# Настройки сервера
PORT=8080

# OpenAI API (для генерации изображений)
OPENAI_API_KEY=your_openai_api_key_here

# Yandex Cloud Object Storage
YANDEX_CLOUD_ACCESS_KEY_ID=your_access_key_id
YANDEX_CLOUD_SECRET_ACCESS_KEY=your_secret_access_key
YANDEX_CLOUD_BUCKET_NAME=your_bucket_name
YANDEX_CLOUD_REGION=ru-central1
YANDEX_CLOUD_ENDPOINT=https://storage.yandexcloud.net

# Yandex AI для генерации изображений (опционально)
YANDEX_AI_API_KEY=your_yandex_ai_api_key

# Настройки CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
